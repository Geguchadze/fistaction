    <% campgrounds.forEach(campground => {%>
      <div class="col-md-3 col-sm-6">
        <div class="thumbnail card">
          <img class="campground__image" data-src="<%= campground.image.url %>" alt="<%= campground.name %>" />
          <div class="caption">
            <h4 id="guccigang" class="caption"><%= campground.name %></h4>
          </div>
          <p>
            <a class="btn btn-outline-info btn-sm btn-b-mg" href="/campgrounds/<%= campground._id %>">
              More Info
            </a>
          </p>
        </div>
      </div>
